<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="15dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="10dp"
        android:layout_weight="1.5"
        android:gravity="center_vertical" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="12dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:text="@string/potted_s" />

            <Button
                android:id="@+id/btRemovePotted"
                android:layout_width="30dp"
                android:layout_height="28dp"
                android:layout_marginEnd="15dp"
                android:alpha="0.5"
                android:background="@drawable/ic_remove_24dp" />

            <TextView
                android:id="@+id/tvPotted"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="15dp"
                android:gravity="center"
                android:text="0" />

            <Button
                android:id="@+id/btAddPotted"
                android:layout_width="30dp"
                android:layout_height="28dp"
                android:alpha="0.5"
                android:background="@drawable/ic_add_24dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="12dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:text="@string/missed_s" />

            <Button
                android:id="@+id/btRemoveMissed"
                android:layout_width="30dp"
                android:layout_height="28dp"
                android:layout_marginEnd="15dp"
                android:alpha="0.5"
                android:background="@drawable/ic_remove_24dp" />

            <TextView
                android:id="@+id/tvMissed"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:gravity="center"
                android:maxLines="1"
                android:text="99" />

            <Button
                android:id="@+id/btAddMissed"
                android:layout_width="30dp"
                android:layout_height="28dp"
                android:alpha="0.5"
                android:background="@drawable/ic_add_24dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="12dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:text="@string/fouled_s" />

            <Button
                android:id="@+id/btRemoveFouled"
                android:layout_width="30dp"
                android:layout_height="28dp"
                android:layout_marginEnd="15dp"
                android:alpha="0.5"
                android:background="@drawable/ic_remove_24dp" />

            <TextView
                android:id="@+id/tvFouled"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:gravity="center"
                android:text="0" />

            <Button
                android:id="@+id/btAddFouled"
                android:layout_width="30dp"
                android:layout_height="28dp"
                android:alpha="0.5"
                android:background="@drawable/ic_add_24dp" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tvRate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="end"
        android:textSize="17sp"
        android:textStyle="bold" />

</LinearLayout>
